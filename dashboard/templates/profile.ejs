<%- include('blocks/header', { bot, user, title: `${discordUser.username} | Discord House`, embedding: { default: true } }) %>

<meta name="description" content="Bio : <%=profile.bio%>">
<meta name="og:title" property="og:title" content="<%=discordUser.tag%>'s profile | Discord-App.Tk">
<meta name="og:description" property="og:description" content="Bio : <%=profile.bio%>">
<meta name="twitter:card" content="Bio : <%=profile.bio%>">
<meta property="og:image" content="<%= bot.users.get(discordUser.id).displayAvatarURL({ size:512 }); %>">
<center>
  <div class="parent">
    <div class="con">
      <div class="con2">
        <div class="follow">
          <h3 class="followNum"></h3>
          <h3 class="followH"></h3>
        </div>
        <div class="faceCon">

        <img src="<%= bot.users.get(discordUser.id) ? bot.users.get(discordUser.id).displayAvatarURL({ size: 512 }) : "Not Found" %>" class="img-raised rounded-circle"/></img>

      </div>

        <div class="following">
          <h3 class="followingNum"></h3>
          <h3 class="followingH"></h3>
        </div>
      </div>

      <div class="con3">
        <div class="nl">
          <h3 class="name"> <i class="fab fa-discord"></i> <%=discordUser.tag%></h3>
          <% if (profile.certifiedDev) {%>
            <h3 class="loca">Certified Developer</h3>
            <% } else {%>
              <h3 class="loca">Developer</h3>
              <% }  %>

          <hr class="line1">

          <h3 class="bio"><%=profile.bio%></h3>

          <hr class="line2">

        </div>

      </div>
  <div style="margin: 25px"></div>
     <!-- <a href="#" class="fa fa-github"></a>
              <a href="#" class="fa fa-globe"></a>
              <a href="#" class="fa fa-twitter"></a>
              <a href="#" class="fa fa-linkedin"></a>
              <a href="#" class="fa fa-youtube"></a>
              <a href="#" class="fa fa-instagram"></a>
              <a href="#" class="fa fa-reddit"></a>-->
              <ul class="inline stats">
                  <li>
                    <span><%= bots.length %></span>
                    Bots
                 </li>
                 <li>
                    <span><%= profile.karma %></span>
                    Karma
                 </li>
               <!--  <li>
                    <span></span>
                    Rank
                 </li>-->
             </ul>
      <div class="main-bkg">
        <% if (bots.length == 0) { %>
     <div style="text-align:center;">
       <br>
      <p style="font-size: 25px;color:white; padding: 10px;text-align: center;"><i class="fas fa-walking"></i>  This user hasn't listed any bots yet.</p>
     <br>
      </div>

      <%} else {%>
        <div style="padding: 20px 20px 20px 20px">

            <div class="row">
              <% bots.forEach(theBot => { if (!bot.users.get(theBot.id)) bot.users.get(theBot.id) = { presence: { status: "offline" }, username: theBot.name  } %>
              <center><%- include("blocks/card.ejs", { theBot, bot }); %></center>
              <% }); %>
            </div>
            </div><% }; %>
      </div>

    </div>
  </div>
</center>

